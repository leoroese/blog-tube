{
  "name": "gql-typescript-prisma-codegen-apolloserver",
  "version": "1.0.0",
  "description": "GQL microservice project structure with prisma, codegen, apolloserver and typescript",
  "main": "index.js",
  "repository": "https://github.com/leoroese/blog-tube",
  "author": "Leonardo Roese",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon",
    "start": "node -r ts-node/register/transpile-only -r tsconfig-paths/register ./dist/src/index.js",
    "build": "tsc -p tsconfig.prod.json",
    "test": "yarn test:unit && yarn test:integration",
    "test:unit": "jest unit",
    "test:integration": "dotenv -e ./.env.test yarn generate:reset && dotenv -e ./.env.test jest int -i",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint:fix": "eslint --fix .",
    "generate": "graphql-codegen --config codegen.yml",
    "generate:migration": "npx prisma migrate dev",
    "generate:reset": "npx prisma migrate reset --force",
    "prisma:studio": "npx prisma studio",
    "test:environment:docker": "yarn docker:up && yarn docker:test:run & yarn docker:down",
    "docker:up": "docker-compose up -d --build",
    "docker:down": "docker compose down",
    "docker:test:run": "docker exec server ./bin/wait-for-it.sh db:5432 -- yarn test"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.21.7",
    "@graphql-codegen/typescript": "1.23.0",
    "@graphql-codegen/typescript-resolvers": "1.20.0",
    "@types/dotenv-safe": "^8.1.2",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.4.1",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@typescript-eslint/parser": "^4.28.4",
    "eslint": "^7.31.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^27.0.6",
    "jest-mock-extended": "^1.0.18",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2",
    "prisma": "^2.27.0",
    "ts-jest": "^27.0.4",
    "ts-node": "^10.1.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "@graphql-codegen/core": "^1.17.10",
    "@graphql-codegen/plugin-helpers": "^1.18.8",
    "@graphql-codegen/schema-ast": "^1.18.3",
    "@prisma/client": "^2.27.0",
    "apollo-graphql": "^0.9.3",
    "apollo-server": "^3.0.2",
    "dotenv-cli": "^4.0.0",
    "dotenv-safe": "^8.2.0",
    "graphql": "^15.5.1"
  }
}
